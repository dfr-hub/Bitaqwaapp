<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.dzikir.MenuDzikirActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_dzikir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
        app:title="@string/text_menu_dzikir"
        app:titleTextColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarAppearance" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_doa_pagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_dzikir"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_logo_dzikir_pagi"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_doa_sholat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_doa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/colorText"
                android:textAlignment="center"
                android:text="Dzikir Pagi"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo_dzikir_pagi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_logo_dzikir_pagi"
                app:layout_constraintTop_toTopOf="@id/iv_logo_dzikir_pagi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_doa_petang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_doa_pagi"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_logo_dzikir_petang"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_doa_sholat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_doa_petang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/colorText"
                android:textAlignment="center"
                android:text="Dzikir Petang"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo_dzikir_petang"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_logo_dzikir_petang"
                app:layout_constraintTop_toTopOf="@id/iv_logo_dzikir_petang" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_doa_setelah_sholat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_doa_petang"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_logo_dzikir_setelah_sholat"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_doa_sholat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_doa_setelah_sholat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/colorText"
                android:textAlignment="center"
                android:text="Dzikir Setelah Sholat"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo_dzikir_setelah_sholat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_logo_dzikir_setelah_sholat"
                app:layout_constraintTop_toTopOf="@id/iv_logo_dzikir_setelah_sholat" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

